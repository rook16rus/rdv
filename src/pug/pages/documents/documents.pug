  const documents = [
    {
      title: "Политика конфиденциальности",
      text: "Политика конфиденциальности и обработки персональных данных"
    },
    {
      title: "Оферта",
      text: "Оферта на предоставление права использования программных продуктов, их адаптацию, модификацию, внедрение и сопровождение"
    },
    {
      title: "Публичная оферта",
      text: "Публичная оферта о заключении договора возмездного оказания услуг"
    },
    {
      title: "Публичная оферта",
